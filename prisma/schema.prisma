datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Termo {
  id        Int      @id @default(autoincrement())
  termo     String
  definicao String
  fonte     String?   // deixa opcional com ? se quiser
  criadoEm  DateTime @default(now())
}